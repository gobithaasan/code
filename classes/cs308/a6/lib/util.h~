#ifndef _LIB_UTIL_H
#define _LIB_UTIL_H

#include <dirent.h>
#include <stdio.h>
#include <stdlib.h>
#include "list.h"

typedef struct fs_node_s {
ino_t          d_ino;
off_t          d_off;
unsigned short d_reclen;
unsigned char  d_type;
char           d_name[256];
size_t           depth;
} fs_node_t;

list_t * dir_list(char * dir_name);
void     display_fs_node(fs_node_t * node);

#endif  // _LIB_UTIL_H
